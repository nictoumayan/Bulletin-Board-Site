<%- include( "partials/header" ) %>

<h1>Edit:</h1>

<form class="" action="/update" method="post">

  <div class="form-group">


    <div class="form-group">
      <label for="">Title:</label>
      <input type="text" name="revisedTitle" value="<%=title%>" class="form-control">
    </div>


    <div class="form-group">
      <label for="">Post:</label>
      <textarea class="form-control" name="revisedPost" rows="3"> <%=content%> </textarea>

    </div>

    <!--use the button name and value attributes to pass the post id from the form to the app -->
    <button type="submit" name="updateButton" class="btn btn-outline-secondary" value="<%=currentPostID%>">Save</button>

  </div>

</form>


<%- include( "partials/footer" )%>
